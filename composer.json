{
    "name": "grixu/socius-client",
    "description": "PHP Client for Socius API",
    "keywords": [
        "grixu",
        "socius-client"
    ],
    "homepage": "https://github.com/grixu/socius-client",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mateusz Gosta≈Ñski",
            "email": "mg@grixu.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "grixu/api-client": "^3.3.1",
        "grixu/socius-models": "^3.0",
        "grixu/synchronizer": "^5.0",
        "grixu/socius-dto": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "grixu/data-factories": "^1.0",
        "nunomaduro/larastan": "^0.7.12",
        "nunomaduro/phpinsights": "^2.0",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Grixu\\SociusClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grixu\\SociusClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bi.php-cs-fixer.phpn/phpunit && vendor/bin/phpstan analyse && php artisan insights",
        "test:unit": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "lint": "vendor/bin/php-cs-fixer fix",
        "insights": "php artisan insights",
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Grixu\\SociusClient\\SociusClientServiceProvider"
            ],
            "aliases": {
                "SociusClient": "Grixu\\SociusClient\\SociusClientFacade"
            }
        }
    }
}
